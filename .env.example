# Environment Variables Template
# Copy this file to .env and update values

# Application
APP_NAME="Learning Recommendation System"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://admin:localdev@localhost:5432/recommendations
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TTL_SECONDS=3600

# MinIO / S3
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_EVENTS=learning-events
S3_BUCKET_FEATURES=learning-features
S3_BUCKET_MODELS=learning-models

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_EVENTS=user-events

# Milvus
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION=content_embeddings

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000

# Model Configuration
EMBEDDING_DIM=128
TOP_K_RETRIEVAL=100
TOP_K_RANKING=10

# API
API_HOST=0.0.0.0
API_PORT=8000

# Authentication (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# BentoML
BENTOML_HOST=localhost
BENTOML_PORT=3000

# Feature Flags
ENABLE_CACHING=true
ENABLE_AUTH=false
ENABLE_RATE_LIMITING=false
ENABLE_TRACING=true
